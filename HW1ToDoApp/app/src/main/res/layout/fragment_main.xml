<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mSharedViewModel"
            type="com.konstantinmuzhik.hw1todoapp.fragments.SharedViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/list_layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryVariant"

        android:fitsSystemWindows="true"
        android:theme="@style/Theme.HW1ToDoApp"

        tools:context=".fragments.main.MainFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.HW1ToDoApp"
            android:background="?attr/colorPrimaryVariant"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextColor="?attr/colorOnSecondary"
                app:contentScrim="?attr/colorSecondary"
                app:expandedTitleMarginBottom="50dp"
                app:expandedTitleTextColor="?attr/colorOnSecondary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@string/my_tasks">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/completed_tasks"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="32dp"
                    android:gravity="center"
                    android:text="@string/completed_title"
                    android:textColor="@color/grey"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

                <ImageView
                    android:id="@+id/visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="22dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no"
                    app:backgroundTint="@android:color/transparent"
                    app:elevation="0dp"
                    app:layout_collapseMode="pin"
                    app:srcCompat="@drawable/visibility" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/tasks_background"
            android:elevation="1dp"

            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/no_result_animation_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/noresultanim" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_fab"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"

            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"

            android:contentDescription="@string/add_fab_description"
            android:navigateToAddFragment="@{true}"
            app:backgroundTint="@color/color_light_blue"
            app:srcCompat="@drawable/baseline_add_24"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/no_data_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:alpha="0.5"
            android:emptyDatabase="@{mSharedViewModel.emptyDatabase}"
            android:text="@string/no_data"
            android:textSize="16sp"
            android:layout_gravity="center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>